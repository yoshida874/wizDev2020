@model QuizModel

@{
    var id = ViewContext.RouteData.Values["id"].ToString();
    var now = $"{id}問目";
    var next = Convert.ToInt32(id) + 1;
}

<h1>@now</h1>
<p>@Model.quiz_question</p>
<form class="form-group">
    <div class="row">
        <input id="1" type="button" asp-for="quiz_choice1" class="col btn btn-primary" onclick="show(this)" />
        <input id="2" type="button" asp-for="quiz_choice2" class="col btn btn-primary" onclick="show(this)" />
        <input id="3" type="button" asp-for="quiz_choice3" class="col btn btn-primary" onclick="show(this)" />
        <input id="4" type="button" asp-for="quiz_choice4" class="col btn btn-primary" onclick="show(this)" />
    </div>
</form>
<br />
<label id="correct" hidden>@Model.quiz_correct</label>
<form method="post">
    <input type="submit" asp-controller="Quiz" asp-action="Question" asp-route-id="@next" class="btn btn-primary" value="次の問題" />
</form>
<br />
<ul id="descriptions" hidden>
    <li>
        <p>@Model.quiz_description1</p>
    </li>
    <li>
        <p>@Model.quiz_description2</p>
    </li>
    <li>
        <p>@Model.quiz_description3</p>
    </li>
    <li>
        <p>@Model.quiz_description4</p>
    </li>
</ul>
<script src="~/js/quiz.js"></script>
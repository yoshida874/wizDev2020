@model QuizModel

<div class="row">
    <div class="col">
        <!--何問目-->
        <h1 id="quizCount">@ViewData["Now"]</h1>
        <!--正答率-->
        <p id="AlloutofCorrect" hidden>@ViewData["AlloutofCorrect"]</p>
    </div>
</div>

<!--問題文-->
<p>@Model.quiz_question</p>
<br />
<!--選択肢-->
<form class="form-group" method="get">
    <ul>
        <!--id 正解のボタンを特定するため
            asp-for nameとvalueが生成
            onclick -->
        <li style="margin-bottom: 16px"><input id="1" type="button" asp-for="@Model.quiz_choice1" class="btn btn-primary" onclick="answer(this)" /></li>
        <li style="margin-bottom: 16px"><input id="2" type="button" asp-for="@Model.quiz_choice2" class="btn btn-primary" onclick="answer(this)" /></li>
        <li style="margin-bottom: 16px"><input id="3" type="button" asp-for="@Model.quiz_choice3" class="btn btn-primary" onclick="answer(this)" /></li>
        <li style="margin-bottom: 16px"><input id="4" type="button" asp-for="@Model.quiz_choice4" class="btn btn-primary" onclick="answer(this)" /></li>
    </ul>
    <!--次の問題へ遷移
        asp-route-id url /questoin/{id?}にパラメータ指定-->
    <input type="submit" name="selId" asp-route-id="@ViewData["Next"]" class="btn btn-primary" value="次の問題" onclick="setSelBtnId(this)" />
    <button id="ghost" hidden class="btn btn-primary">次の問題</button>
</form>
<br />

<p id="correctPosition" hidden>@ViewBag.correctPosition</p>
<p id="correct" hidden>@ViewData["Correct"]</p>
<br />

<!--解説 解答後に非表示解除 -->
<ul id="descriptions" hidden>
    <li>
        <p>@Model.quiz_description1</p>
    </li>
    <li>
        <p>@Model.quiz_description2</p>
    </li>
    <li>
        <p>@Model.quiz_description3</p>
    </li>
    <li>
        <p>@Model.quiz_description4</p>
    </li>
</ul>
<script src="~/js/quiz.js"></script>